<div class="dice-tooltip city-die-tooltip city-roll" data-move-id="{{moveId}}" >
	<div class="actor-name"> {{actorName}} </div>
	<div class="move-name"> {{moveName}} </div>
	<hr>
	{{#if (ne options.noRoll true)}}
	<section class="roll-block">
		<ol class="dice-rolls">
			{{#if (eq options.setRoll 0)}}
			{{#each this.rolls}}
			{{#if this.result}}
			<li class="roll die d6">{{{this.result}}}</li>
			{{else}}
			<li class="roll die d6">{{{this.roll}}}</li>
			{{/if}}
			{{/each}}
			{{else}}
			<li class="roll die d6"> {{options.setRoll}} </li>
			{{/if}}
		</ol>
		<ul class="roll-modifiers">
			{{#each modifiers as |modifier id|}}
			{{> "systems/city-of-mist/templates/parts/city-roll-modifier.hbs" modifier=modifier}}
			{{/each}}
			{{#if (neq powerAdjustment 0)}}
			<li>
				<span class="name">
					Adjustment to Power:
					{{#if (gt powerAdjustment 0)}} +{{/if}}
					{{powerAdjustment}}
				</span>
			</li>
			{{/if}}
			{{#if (neq rollAdjustment 0)}}
			<li>
				<span class="name">
					Adjustment to roll total only:
					{{#if (gt rollAdjustment 0)}} +{{/if}}
					{{rollAdjustment}}
				</span>
			</li>
			{{/if}}
		</ul>
		<div class="roll-total"> {{total}}
			<a class="edit-roll" title="Edit Roll"><i class="fas fa-eraser"></i></a>
		</div>
	</section>
	<hr>
	{{/if}}
	<div class="move-text"> {{{moveText}}} </div>
	<ul class="move-list">
		{{#each moveList as |li id|}}
		{{#if (ne li.cost 0)}}
		<li class="move-list-item {{#if li.checked}} selected{{/if}}">
			<input class="roll-selector-checkbox" type="checkbox" {{#if li.checked}} checked {{/if}} data-listitem="{{li.text}}" data-origtext="{{li.origText}}" data-itemcost="{{li.cost}}">
			{{else}}
			<li class="move-list-bullets">
				{{/if}}
				{{li.text}} </li>
			{{/each}}
	</ul>

	{{#if roll.showPowerPanel}}
	<hr>
	<div class="move-tag-status-creator">
		{{#if ( isMistEngine )}}
		{{> "systems/city-of-mist/templates/parts/move-create-tag-me.hbs" move=move options=options roll=roll}}

		{{else}}
		{{> "systems/city-of-mist/templates/parts/move-create-tag-com.hbs" move=move options=options roll=roll}}
		{{/if}}
	</div>
	{{else}}
	<button class="show-effects-list">
		+<i class="fa-solid fa-tags"></i> / <i class="fa-solid fa-briefcase-medical"></i>
	</button>
	{{/if}}

</div>

